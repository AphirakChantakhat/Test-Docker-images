<body>
   <div class="wrapper">
    <form action="/member" method="post" novalidate>
        <h1>Login</h1>
        <div class="input-box">
            <input id = "txt_ssid" type="text" name="user_ssid" value="<%= (locals.old_data) ? old_data.user_ssid : '' %>" placeholder="SSID"
            required>
            <i class='bx bxs-user-account'></i>
        </div>
        <div class="input-box">
            <input id = "txt_pass" type="text" name="user_pass"  placeholder="Password"
            required>
            <i class='bx bxs-lock-alt' ></i>
        </div>
        <% if(locals.member_error){
            member_error.forEach(function(error_mag){ %>
            <div class="alert alert_danger" role="alert"><%= error_mag %></div>
        <%})
        } %>
        <button type="button" class="btn">Save</button>
        
    </form>
   </div>

